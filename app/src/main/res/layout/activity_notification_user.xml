<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_greyextra"
            android:padding="@dimen/standardsize">

            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/notifications"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/standardsize" />


            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:drawablePadding="@dimen/textview_margin"
                android:drawableRight="@drawable/drop_icon"
                android:text="@string/_04"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/standardsize" />


        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_notificatoin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingTop="5dp"
            android:scrollbars="none" />

    </LinearLayout>


</layout>