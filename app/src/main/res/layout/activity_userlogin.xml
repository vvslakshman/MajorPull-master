<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <data></data>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/extra_excel_margine"
                    android:src="@drawable/logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <majorpull.com.majorpull.CustomViews.RegularEditText
                            android:id="@+id/et_countrycode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1.5"
                            android:background="@null"
                            android:drawableLeft="@drawable/mobile_icon"
                            android:drawablePadding="@dimen/standard_margin"
                            android:focusable="false"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text="@string/_91"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/standardsize" />

                        <majorpull.com.majorpull.CustomViews.RegularEditText
                            android:id="@+id/et_mobilenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight=".5"
                            android:background="@null"
                            android:drawablePadding="@dimen/standard_margin"
                            android:hint="@string/mobile_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/standardsize" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/min_margin"
                        android:background="@color/light_greyextra" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/doublestandard_margin">


                        <majorpull.com.majorpull.CustomViews.RegularEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/doublestandard_margin"
                            android:background="@null"
                            android:drawableLeft="@drawable/passwrd_icon"
                            android:drawablePadding="@dimen/standard_margin"
                            android:hint="@string/password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/standardsize" />

                        <ImageView
                            android:id="@+id/iv_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/textview_margin"
                            android:src="@drawable/paswd_reset" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/min_margin"
                        android:background="@color/light_greyextra" />


                    <majorpull.com.majorpull.CustomViews.RegularTextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/doublestandard_margin"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/forgot_password"
                        android:textColor="@color/bluecolor"
                        android:textSize="@dimen/standardsize"
                        android:visibility="visible" />


                    <majorpull.com.majorpull.CustomViews.BoldLightTextView
                        android:id="@+id/tv_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/doublestandard_margin"
                        android:background="@drawable/round_rect_red"
                        android:gravity="center"
                        android:padding="@dimen/standard_margin"
                        android:text="@string/sign_in"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/standardsize"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/doublestandard_margin"
                        android:gravity="center">

                        <View
                            android:layout_width="30dp"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/tv_or"
                            android:background="@color/grey" />

                        <TextView
                            android:id="@+id/tv_or"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:text="@string/or"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/standardsize" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="2dp"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/tv_or"
                            android:background="@color/grey" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/standard_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:minWidth="@dimen/miniwidth"
                                android:src="@drawable/fb_icon"
                                android:visibility="visible" />

                            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                                android:id="@+id/tv_fb_signin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/min_margin"
                                android:drawablePadding="@dimen/standard_margin"

                                android:minWidth="@dimen/miniwidth_fbtext"
                                android:text="@string/sign_in_with_facebook"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/standardsize" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_gplush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/min_margin"
                        android:background="@drawable/round_rect_light_red"
                        android:orientation="horizontal"
                        android:padding="@dimen/standard_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:minWidth="@dimen/miniwidth"
                                android:src="@drawable/goggle_plus"
                                android:visibility="visible" />

                            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                                android:id="@+id/tv_gplush_signin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/min_margin"
                                android:minWidth="@dimen/miniwidth_fbtext"
                                android:text="@string/sign_in_with_google_plus"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/standardsize" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/doublestandard_margin"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <majorpull.com.majorpull.CustomViews.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/don_t_have_an_account_sign_up"
                            android:textSize="@dimen/normalsize" />

                        <majorpull.com.majorpull.CustomViews.RegularTextView
                            android:id="@+id/tv_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/textview_margin"
                            android:text="@string/sign_upp"
                            android:textColor="@color/dark_red"
                            android:textSize="@dimen/normalsize" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>