<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <data></data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/standard_margin">


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <majorpull.com.majorpull.CustomViews.BoldTextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sign"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/doublestandardsize" />


                <LinearLayout
                    android:id="@+id/ll_up"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textview_margin"
                    android:layout_toRightOf="@+id/tv_sign"
                    android:orientation="vertical">

                    <majorpull.com.majorpull.CustomViews.BoldTextView
                        android:id="@+id/tv_up"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/up"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/doublestandardsize" />


                </LinearLayout>

                <View
                    android:layout_width="36dp"
                    android:layout_height="5px"
                    android:layout_below="@+id/ll_up"
                    android:layout_marginBottom="@dimen/doublestandard_margin"
                    android:layout_marginRight="@dimen/textview_margin"
                    android:layout_toRightOf="@+id/tv_sign"
                    android:background="@color/dark_navi_blue" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_countrycode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/mobile_icon"
                    android:drawablePadding="@dimen/standard_margin"
                    android:focusable="false"
                    android:hint="@string/_91"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingRight="@dimen/standard_margin"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standardsize"
                    android:background="@null"

                    android:hint="@string/mobile_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/standardsize" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />


            <majorpull.com.majorpull.CustomViews.RegularEditText
                android:id="@+id/et_emailaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standardsize"
                android:background="@null"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/standardsize"
                android:hint="@string/email_address"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/standardsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />


            <majorpull.com.majorpull.CustomViews.RegularEditText
                android:id="@+id/et_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standardsize"
                android:background="@null"
                android:drawableLeft="@drawable/first_name"
                android:drawablePadding="@dimen/standardsize"
                android:hint="@string/first_name"

                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/standardsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />


            <majorpull.com.majorpull.CustomViews.RegularEditText
                android:id="@+id/et_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standardsize"
                android:background="@null"
                android:drawableLeft="@drawable/last_name"
                android:drawablePadding="@dimen/standardsize"
                android:hint="@string/last_name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/standardsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />


            <majorpull.com.majorpull.CustomViews.RegularEditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standardsize"
                android:background="@null"
                android:drawableLeft="@drawable/country"
                android:drawablePadding="@dimen/standardsize"
                android:focusable="false"
                android:hint="@string/country"

                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/standardsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/doublestandard_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/passwrd_icon"
                    android:drawablePadding="@dimen/standard_margin"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <ImageView
                    android:id="@+id/iv_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/textview_margin"
                    android:src="@drawable/paswd_reset" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_cofirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/doublestandard_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/passwrd_icon"
                    android:drawablePadding="@dimen/standard_margin"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <ImageView
                    android:id="@+id/iv_show_confirmpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/textview_margin"
                    android:src="@drawable/paswd_reset" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/min_margin"
                android:background="@color/light_greyextra" />


            <majorpull.com.majorpull.CustomViews.BoldTextView
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:background="@drawable/round_rect_red"
                android:gravity="center"
                android:padding="@dimen/standard_margin"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/standardsize"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/doublestandard_margin"
                android:gravity="center">

                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv_or"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/or"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/standardsize" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_or"
                    android:background="@color/grey" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/min_margin"
                    android:src="@drawable/fb_icn" />

                <ImageView
                    android:id="@+id/iv_gplash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ggle_pls" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <majorpull.com.majorpull.CustomViews.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/already_have_an_account_sign_in"
                    android:textSize="@dimen/normalsize" />

                <majorpull.com.majorpull.CustomViews.RegularTextView
                    android:id="@+id/tv_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/textview_margin"
                    android:text="@string/sign_inn"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/normalsize" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</layout>