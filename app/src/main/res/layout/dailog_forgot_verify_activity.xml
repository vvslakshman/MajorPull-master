<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">


        <!--OTPblock-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:orientation="horizontal">

            <majorpull.com.majorpull.CustomViews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="125dp"

                android:text="@string/otp"
                android:textColor="@color/black"
                android:textSize="@dimen/standardsize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_otpnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="0000"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_grey" />

            </LinearLayout>


        </LinearLayout>

        <!--Newpasswordblock-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="horizontal">

            <majorpull.com.majorpull.CustomViews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="125dp"
                android:text="@string/new_password"

                android:textColor="@color/black"
                android:textSize="@dimen/standardsize"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_weight="1"
                android:orientation="vertical">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/et_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/new_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_grey" />

            </LinearLayout>


        </LinearLayout>


        <!--confirmNewpasswordblock-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="horizontal">

            <majorpull.com.majorpull.CustomViews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="125dp"
                android:text="@string/confirm_password"
                android:textColor="@color/black"
                android:textSize="@dimen/standardsize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_weight="1"
                android:orientation="vertical">


                <majorpull.com.majorpull.CustomViews.RegularEditText
                    android:id="@+id/etconfirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/confirm_new_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/standardsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_grey" />

            </LinearLayout>


        </LinearLayout>


        <!--Newpasswordblock-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_rect_light_red"
                android:gravity="center"
                android:minHeight="30dp"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/standardsize"

                />

            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_weight="1"
                android:background="@drawable/round_rect_light_red"
                android:gravity="center"
                android:minHeight="30dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/standardsize"

                />


        </LinearLayout>


    </LinearLayout>


</layout>