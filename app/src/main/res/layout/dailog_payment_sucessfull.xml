<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data></data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/standard_margin">


        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/standard_margin"
                android:src="@drawable/cross_icon"
                android:visibility="gone" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginTop="@dimen/extra_excel_margine"
                android:src="@drawable/confirm_icon" />

            <majorpull.com.majorpull.CustomViews.RegularTextView
                android:id="@+id/tv_massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/your_payment_has_sucessfully_completed"
                android:textColor="@color/black"
                android:textSize="@dimen/standardsize" />

            <majorpull.com.majorpull.CustomViews.BoldLightTextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/extra_excel_margine"
                android:text="@string/total_bill_amount_12"
                android:textColor="@color/black"
                android:textSize="@dimen/standardsize" />


            <majorpull.com.majorpull.CustomViews.RegularTextView
                android:id="@+id/tv_ratingreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/extra_excel_margine"
                android:layout_marginTop="@dimen/extra_excel_margine"
                android:background="@color/dark_red"

                android:padding="@dimen/standard_margin"
                android:text="@string/rate_amp_review_driver"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</layout>
    