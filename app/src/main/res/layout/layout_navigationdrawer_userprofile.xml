<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/standardsize">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/standard_margin"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivprofile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_deaultimg" />

                <majorpull.com.majorpull.CustomViews.BoldLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:background="@null"
                    android:text="@string/jhonson_williams"
                    android:id="@+id/tv_usename"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/standardsize" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/home_icon" />


                <majorpull.com.majorpull.CustomViews.RegularTextView

                    android:id="@+id/tv_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/doublestandard_margin"
                    android:layout_toRightOf="@+id/iv_home"
                    android:text="@string/home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_yourtrips"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/your_trip" />


                <majorpull.com.majorpull.CustomViews.RegularTextView

                    android:id="@+id/tv_yourtrips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_toRightOf="@+id/iv_trip"
                    android:text="@string/your_trips"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_scheduledtrips"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_schedul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/schedule_icon" />


                <majorpull.com.majorpull.CustomViews.RegularTextView

                    android:id="@+id/tv_schedul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/doublestandard_margin"
                    android:layout_toRightOf="@+id/iv_schedul"
                    android:text="@string/scheduled_trips"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_myprofile"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/myprofile" />


                <majorpull.com.majorpull.CustomViews.RegularTextView

                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/doublestandard_margin"
                    android:layout_toRightOf="@+id/iv_profile"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_settingg"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/settings" />


                <majorpull.com.majorpull.CustomViews.RegularTextView
                    android:id="@+id/tv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/doublestandard_margin"
                    android:layout_toRightOf="@+id/iv_setting"
                    android:text="@string/setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_logout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublestandard_margin"
                android:padding="@dimen/standard_margin">

                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logout" />


                <majorpull.com.majorpull.CustomViews.RegularTextView

                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/doublestandard_margin"
                    android:layout_toRightOf="@+id/iv_logout"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/standardsize" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</layout>
